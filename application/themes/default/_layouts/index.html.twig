<!DOCTYPE html>
<html lang="ptb">
<head>
	<title>Patrimônio UA3 | {{ title }}</title>
	<meta charset="utf-8">
	<link href="{{ base_url('bootstrap/css/bootstrap.css') }}" rel="stylesheet">

	<style type="text/css">
		html {
			position: relative;
			min-height: 100%;	
		}

		.container {
			padding-top: 20px;
			max-width: 900px;
			
		}
	</style>
</head>
<body>
<div class="container">

	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<!-- Brand -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				{{ anchor('/', 'Patrimônio UA3', {'class':'navbar-brand'}) }}
			</div>

			<div id="navbar" class="navbar-collapse collapse">
				<!-- Menu Equipamentos -->
				<ul class="nav navbar-nav">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Equipamentos<span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<li>{{ anchor('equipamento', 'Listar') }}</li>
							<li>{{ anchor('equipamento/novo', 'Cadastrar') }}</li>
						</ul>
					</li>
					<!-- Menu Patrimônio -->
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Patrimônio<span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<li>{{ anchor('patrimonio', 'Listar') }}</li>
							<li>{{ anchor('patrimonio/novo', 'Cadastrar') }}</li>
						</ul>
					</li>
					<!-- Menu Ambiente -->
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Ambiente<span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<li>{{ anchor('ambiente', 'Listar') }}</li>
						</ul>
					</li>
				</ul>
				{{ anchor('/auth/logout/', 'Logout',
						{'class': 'btn btn-success navbar-btn navbar-right',
						 'role': 'button'} ) }}
				<p class="navbar-text navbar-right" style="padding-right: 20px;">Olá, {{ username }}</p>
			</div><!--/.nav-collapse -->
		</div><!--/.container-fluid -->
	</nav>

	<h2 class="text-center">{{ title }}</h2>
	<br>
	{% block content %}

	{% endblock %}

</div> <!-- class="container" -->


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ base_url('bootstrap/js/jquery.min.js') }}"></script>
<script src="{{base_url('bootstrap/js/bootstrap.min.js')}}"></script>

</body>
</html>