{% extends _layout %}

{% block content %}


	<div class="col-sm-10 col-sm-offset-1">

	<h3 class="text-center">{{ descricao }} {{ fabricante }} {{ modelo }}</h3>

	<br>

	<table class="table table-striped">
		<thead><tr>
			<th>Tombo</th>
			<th>Nº série</th>
			<th>Localização</th>
		</tr></thead>
		<tbody>

			{% for patrim in patrimonios %}
				<tr>
					<td>{{ anchor('/patrimonio/detalha/'~patrim.id, (patrim.tombo > 0)?patrim.tombo:'<span style="color:red">#'~patrim.id~'</span>') }}</td>
					<td>{{ patrim.n_serie }}</td>
					<td>{{ patrim.ambiente }}</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>

	</div>

{% endblock %}